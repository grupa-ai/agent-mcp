# Include all Python files
include *.md
include *.txt
include *.toml
include LICENSE
include .env.example
include env.template

# Include package files
recursive-include agent_mcp *.py
recursive-include agent_mcp *.json
recursive-include agent_mcp *.yaml
recursive-include agent_mcp *.yml
recursive-include agent_mcp/config *
recursive-include agent_mcp/templates *
recursive-include agent_mcp/static *
recursive-include docs *

# Include demos and examples (as documentation)
recursive-include demos *.py
recursive-include examples *.py

# Exclude virtual environments and build artifacts
prune */venv
prune */*/venv
prune */*/*/venv
prune .venv
prune */.venv
prune */*/.venv
prune build
prune dist
prune *.egg-info
prune .hypothesis

# Exclude Python cache and compiled files
global-exclude *.py[co]
global-exclude *$py.class
global-exclude __pycache__
global-exclude .pytest_cache

# Exclude system and IDE files
global-exclude .DS_Store
global-exclude .coverage
global-exclude coverage.xml
global-exclude *.cover
global-exclude .git
global-exclude .github
global-exclude .idea
global-exclude .vscode
global-exclude *.swp
global-exclude *.log
global-exclude *.bak

# Exclude environment and configuration
global-exclude .env
global-exclude .env.*

# Exclude test and development files (but keep demo files)
prune tests
prune agent_mcp/tests
global-exclude *test*.py
global-exclude *conftest.py
global-exclude *.ipynb
global-exclude .ipynb_checkpoints

# Exclude sensitive files
global-exclude **/firebase-key.json
global-exclude **/firebase/*.json